{
	"name": "npm-lockfile",
	"version": "1.0.2",
	"description": "Safely generate an npm lockfile and output it to the filename of your choice.",
	"bin": "./bin.js",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "npm run tests-only",
		"tests-only": "node test",
		"posttest": "npm run audit",
		"preaudit": "npm install --package-lock --package-lock-only",
		"audit": "npm audit",
		"postaudit": "rm package-lock.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/npm-lockfile.git"
	},
	"keywords": [
		"npm",
		"package-lock",
		"npm-shrinkwrap",
		"shrinkwrap",
		"lockfile"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/npm-lockfile/issues"
	},
	"homepage": "https://github.com/ljharb/npm-lockfile#readme",
	"dependencies": {
		"chalk": "^2.4.2",
		"find-package-json": "^1.2.0",
		"fs-copy-file": "^2.1.2",
		"node-cleanup": "^2.1.2",
		"object-inspect": "^1.6.0",
		"rimraf": "^2.6.3",
		"semver": "^5.6.0",
		"tmp": "0.0.33",
		"util.promisify": "^1.0.0",
		"yargs": "^13.2.1"
	},
	"engines": {
		"node": ">= 6"
	},
	"devDependencies": {
		"@ljharb/eslint-config": "^13.1.1",
		"eslint": "^5.14.1",
		"tape": "^4.10.1"
	}
}
